<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HengtuActivity">


    <android.support.design.widget.TabLayout
        android:id="@+id/sliding_tabs1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed" />

    <android.support.v4.view.ViewPager
        android:id="@+id/mainViewPager1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40">

    </android.support.v4.view.ViewPager>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:id="@+id/radiogroup1"
        android:background="#F5F5F5"
        android:orientation="horizontal">
        <RadioButton
            style="@style/rg_btn_style"
            android:drawableTop="@drawable/selector"
            android:text="首页"
            android:id="@+id/shouye"/>
        <RadioButton
            style="@style/rg_btn_style1"
            android:drawableTop="@drawable/shape2"
            android:text="横图"
            android:checked="true"
            android:id="@+id/hengtu"/>
    </RadioGroup>


</LinearLayout>